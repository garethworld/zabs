
<section class="flex flex-wrap mb-12 mt-md">

  <div class="w-full mx-auto max-w-forms px-7">
      
    <h1 class="mb-4 text-center text-4-fluid leading-2 md:mb-6">{{ 'customer.register.title' | t }}</h1>

    
        {% form 'create_customer' %}

              {% if form.errors %}
          <div class="pt-6 pb-6 text-tint3 ">

          {{ form.errors | default_errors }}
  </div>
              {% endif %}
          
          <div class="mt-2 mb-6">
          <label class="{% render 'c-label' %}" for="FirstName">{{ 'customer.register.first_name' | t }}</label>
          <input class="{% render 'c-input' %}"  class="{% render 'c-input' %}"  type="text" name="customer[first_name]" id="FirstName" {% if form.first_name %}value="{{ form.first_name }}"{% endif %} autofocus>
          </div>


           <div class="mb-6 ">
          <label class="{% render 'c-label' %}" for="LastName">{{ 'customer.register.last_name' | t }}</label>
          <input class="{% render 'c-input' %}"  type="text" name="customer[last_name]" id="LastName" {% if form.last_name %}value="{{ form.last_name }}"{% endif %}>
 </div>


           <div class="mb-6 ">

          <label class="{% render 'c-label' %}" for="Email">{{ 'customer.register.email' | t }}</label>
          <input class="{% render 'c-input' %}"  type="email" name="customer[email]" id="Email" class="{% if form.errors contains 'email' %} input--error{% endif %}" {% if form.email %} value="{{ form.email }}"{% endif %} autocorrect="off" autocapitalize="off">
          </div>


           <div class="mb-6 ">
          <label class="{% render 'c-label' %}" for="CreatePassword">{{ 'customer.register.password' | t }}</label>
          <input class="{% render 'c-input' %}"  type="password" name="customer[password]" id="CreatePassword" class="{% if form.errors contains 'password' %} input--error{% endif %}">
</div>
         
<div class="flex flex-wrap mb-10">
            <input  class="ml-auto transition-colors duration-300 cursor-pointer hover:text-tint3 text-4-fluid leading-2 text-tint1" type="submit" value="{{ 'customer.register.submit' | t }}" class="">
</div>

        {% endform %}

    
        </div>
        </section>