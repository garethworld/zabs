<section class="flex flex-wrap mb-12 mt-md">

  <div class="w-full mx-auto max-w-forms px-7 " x-data="{ show: false }">
      
<h1 class="mb-4 text-4-fluid leading-2 md:mb-6">Sign in</h1>

      <div class="hidden" id="ResetSuccess">
        {{ 'customer.recover_password.success' | t }}
      </div>


      <div  id="CustomerLoginForm"   class="" >
          {% form 'customer_login' %}
			
         {% if form.errors %}
          <div class="pt-6 pb-6 text-tint3 ">
          {{ form.errors | default_errors }}
          </div>
              {% endif %}


  <div class="mt-2 mb-6 ">
          <label  class="{% render 'c-label' %}" for="CustomerEmail">Email</label>
          <input type="email" name="customer[email]" id="CustomerEmail" class="{% render 'c-input' %} {% if form.errors contains 'email' %}border-tint3{% endif %}" autocorrect="off" autocapitalize="off" autofocus>

          </div>
          {% if form.password_needed %}


        <div class="flex flex-wrap mb-6">
            <label class="w-full {% render 'c-label' %}" for="CustomerPassword">Password</label>
            <input type="password" value="" name="customer[password]" id="CustomerPassword" class="w-full {% render 'c-input' %} mb-0 {% if form.errors contains 'password' %} border-tint3{% endif %}">
          {% endif %}
           
          {% if form.password_needed %}
              <a  x-data="login()" @click="showReset" class="inline-block mt-2 text-1-fluid hover:text-tint1 text-tint5" href="#recover" id="RecoverPassword">Forgot password?</a>
            {% endif %}


              <a  x-data="password()" @click="toggle" class="inline-block mt-2 ml-auto cursor-pointer select-none text-1-fluid hover:text-tint1 text-tint5">Show password</a>
</div>

          <div class="flex w-full">
            <input type="submit" class="ml-auto transition-colors duration-300 cursor-pointer hover:text-tint3 text-4-fluid leading-2 text-tint1" value="Sign in">

            
</div>


            <p class="block w-full pt-6 text-center">
              or<br/><br/>
              {{ 'Create Account' | customer_register_link | replace: 'href', 'class="transition-colors duration-300 hover:text-tint3 text-4-fluid leading-2 text-tint1 font-1" href'}} 
  
            </p>
          </div>

        {% endform %}
     
    
      <div id="RecoverPasswordForm" class="hidden mt-6">

       

        <div class="text-center">
          <h2 class="mb-6 text-center my-sm text-tint1 text-4-fluid">Reset Password</h2>
          <p class="pb-6">{{ 'customer.recover_password.subtext' | t }}</p>
        </div>

     
          {% form 'recover_customer_password' %}

            {{ form.errors | default_errors }}

            {% comment %}
              Add a hidden span to indicate the form was submitted succesfully.
            {% endcomment %}
            {% if form.posted_successfully? %}
              <span class="hide reset-password-success"></span>
            {% endif %}

            <label class="{% render 'c-label' %}" for="RecoverEmail">Your email</label>
            <input class="{% render 'c-input' %}"  type="email" value="" name="email" id="RecoverEmail" class="input-full" autocorrect="off" autocapitalize="off">



              <div class="flex flex-wrap w-full mt-2">
                <div class="w-full mb-3"><a  x-data="login()" @click="hideReset" class="cursor-pointer text-tint5 hover:text-tint3">Cancel</a></div>
                <input type="submit" class="ml-auto transition-colors duration-300 cursor-pointer hover:text-tint3 text-4-fluid leading-2 text-tint1" value="Send">
              </p>

           
              <!--<button type="button" id="HideRecoverPasswordLink" class="text-link">{{ 'customer.recover_password.cancel' | t }}</button>-->
          
          {% endform %}
      
      

      {% comment %}
        If accounts are set as optional, the following will be shown as an option
        during checkout, not on the default /login page.
      {% endcomment %}
      {% if shop.checkout.guest_login %}
        <div class="text-center">
          <hr class="hr--invisible">
          <h2>{{ 'customer.login.guest_title' | t }}</h2>

          {% form 'guest_login' %}
            <input type="submit" class="btn" value="{{ 'customer.login.guest_continue' | t }}">
          {% endform %}
        </div>
      {% endif %}
    </div>

  </div>  
</div>

</div>
</section>