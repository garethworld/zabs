<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <link rel="preload" href="{{ 'bundle.css' | asset_url }}" as="style">
    <link rel="preload" href="{{ 'bundle.js' | asset_url }}" as="script">
    <link rel="shortcut icon" href="{{ 'favicon_32x32.static.png' | asset_url }}" type="image/png">

    <title>{{ page_title | escape }} {%- assign t = template | split: '.' | first -%}{%- if t == 'password'  -%}
        Binky{% endif %}
    </title>
    {%- assign t = template | split: '.' | first -%}{%- if t == 'password'  -%}

      <meta name="description" content="">

    {% else %}
      {% if page_description %}
        <meta name="description" content="{{ page_description | escape }}">
      {% endif %}
    {% endif %}

    {{ 'app.css' | asset_url | stylesheet_tag }}



    <!-- header hook for Shopify plugins -->
    {{ content_for_header }}
  </head>



  <body class="antialiased bg-tint4 text-2 text-tint1 leading-1 font-1">

    {% section "announcement-bar" %}

    <div class="flex flex-col h-screen">

      {% render 'header' %}


      {% render 'cart' %}

      <main class="flex-grow panels">
        {{ content_for_layout }}
      </main>

      {% section 'footer' %}

    </div>

    <script src="{{ 'bundle.js' | asset_url }}" defer="defer"></script>
  </body>
</html>