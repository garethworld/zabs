<section class=''>
  <div>
    {% assign bg_tints = 'collect-3,collect-2,collect-3' | split: ',' %}
    {% for collection in section.settings['feat-collections'] %}
      {% assign index = forloop.index0 %}
      {% assign bg_class_index = index | modulo: bg_tints.size %}
      {% assign bg_class = bg_tints[bg_class_index] %}
      <div class='{{ bg_class }}'>
        <div class='{% render 'c-section-padding' %}'>
          <h2 class='{% render 'c-section-header' %}'>{{ collection.title }}</h2>
          <div class='w-full mx-auto md:w-10/12 {% render 'c-container' %} '>
            <div class='{% render 'c-product-grid' %}'>
              {% for product in collection.products %}
                {% include 'product-card' with card_product: product %}
              {% endfor %}
            </div>
          </div>
        </div>
        <div class='dec-border'></div>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Feature collections",
  "settings": [
    {
      "id": "feat-collections",
      "type": "collection_list",
      "label": "Collections",
      "info": "Select a product to create a grid of variants"
    }
  ]
}
{% endschema %}
