{%- render "collection-filter" -%}

  <a class="fixed hidden lg:block left-0 h-[70px] cursor-pointer top-1/2 w-[65px] h-[200px] -translate-y-1/2 text-tint3 bg-tint4 hover:bg-tint3 hover:text-tint4 duration-300 " x-data="filter()" @click="open" > 
    <span class="absolute top-[20px] block origin-top-left transform rotate-90 translate-x-full">Filter +</span>
  </a>
   
<div class="pt-0 md:pt-7">
  <div class="flex flex-wrap w-full">
    <div class="{% render 'c-gutter' %}"></div>
    <div class="flex-1">
      {%- paginate collection.products by 24 -%}
      

      <div class="flex flex-wrap">

        <div class="w-full md:w-1/2 text-tint3">

          
      {% for link in linklists.main-menu.links %}
       <a x-data="menu()" @click="open" data-target="{{ link.handle | escape }}" class=" text-tint3 duration-300 text-tint3 hover:text-tint1 cursor-pointer {% if link.active or link.child_active %} {% else %} hidden {% endif %} ">{{ link.title | escape }} </a> <span class="{% if link.active or link.child_active %} {% else %} hidden {% endif %} ">></span>
      {% endfor %}

          <span><a class="transition-colors duration-300 text-tint3 hover:text-tint1" href="{{collection.url}}">{% render 'collection-title' %} </a></span> 


          {% for tag in current_tags %}
           
             <span class="cursor-pointer">> <a class="transition-colors duration-300 hover:text-tint1" href="{{ tag | handle }}">
               

              {% assign words = tag  %} 
                {% for word in words %}
                
                  {% if forloop.first == true %} {{ word  | capitalize }} {% endif %}{% else %}
                     {{ word }}
                {% endfor %}  
            
            
            </a></span>
        
          {% endfor %}

         
        </div>

        <div class="w-full mt-6 mb-8 ml-auto md:mt-0 md:w-1/2 md:mb-11 ">
          <h1 class="mb-4 md:mb-6 text-3-fluid" >{% render 'collection-title' %}</h1>

             <div class="leading-3 md:w-10/12 has-txt">{{ collection.description }}</div>

  
            
       
      </div>

      {%- if collection.products.size == 0 -%} <div class="py-6 md:py-9 md:py-11 text-3-fluid">No products currently match this category</div> {%- else -%}
      
      <div class="relative w-full">
      
       
  <a class="inline-block w-full px-6 py-2 mb-3 text-center cursor-pointer sm:text-left sm:w-auto lg:hidden text-tint3 bg-tint4" x-data="filter()" @click="open" > 
    <span class="">Filter +</span>
  </a>
   

      <div class="flex flex-wrap mb-0 md:-mx-2 md:mb-11">
    
        {%- for product in collection.products -%}
        <div class="w-full pb-8 md:pb-10 sm:px-2 sm:w-1/2 md:w-1/3 lg:w-1/4 ">
          {% render 'product-card',card_product: product, img:product.images.first.%}
        </div>
        {%- endfor -%}
      </div>

      {%- if paginate.pages > 1 -%}
      
      <div class="flex w-full pb-7 md:pb-10 lg:pb-12">

     Page {{paginate.current_page}} of {{ paginate.pages }}

      <ul class="ml-auto ">
      {% if paginate.previous.is_link %}
       <a  class="transition-colors duration-300 text-3-fluid hover:text-tint3" href="{{ paginate.previous.url }}">← Previous</a>
    {% endif %}

      {% if paginate.next.is_link %}
      <a class="ml-8 transition-colors duration-300 text-3-fluid hover:text-tint3" href="{{ paginate.next.url }}">Next → </a>
      {% endif %}
      </ul>
      </div>
      
      {%- endif -%} 
      
      {%- endif -%} 
      
      {%- endpaginate -%}
      </div>
    </div>

  </div>
      <div class="{% render 'c-gutter' %}"></div>
</div>
