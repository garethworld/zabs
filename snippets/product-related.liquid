{% if collections[parent.metafields.accentuate.related_collection].title != blank  %}
      
<section id="related-products">
    <div  class="flex flex-wrap py-11 md:py-12 lg:py-13">
    
      <div class="flex flex-col flex-wrap w-full px-4 lg:w-1/4">
        <h3 class="w-full mb-1 lg:mb-7 text-2-fluid">Related items  </h3>
        <h3 class="w-full mb-6 pr-7 text-4-fluid leading-2 text-tint3">{{ collections[parent.metafields.accentuate.related_collection].title }}</h3>
         <div class="hidden mt-auto md:block"><a href="{{ collections[parent.metafields.accentuate.related_collection].url }}" class="transition-colors duration-300 cursor-pointer text-2-fluid hover:text-tint3">View full range + </a></div>
        </div>
      
        {%- assign collection = collections[parent.metafields.accentuate.related_collection] -%}
   
    
      <div id="related" x-data="related()" x-init="init" class="pl-6 pr-6 lg:pr-0 relative overflow-hidden w-full lg:flex-1 mt-6 lg:mt-0  lg:ml-[-50px]">

  <div class="absolute right-0 top-[40vw] sm:top-[20vw] md:top-[14vw] lg:top-[7vw] z-30 splide__arrows">
    <button class="hidden splide__arrow splide__arrow--prev"></button>
    <button class="z-50 p-4 transition duration-300 cursor-pointer sm:block group splide__arrow splide__arrow--next bg-tint4 hover:bg-tint1 ">
      <svg class="w-[20px] transition duration-300 fill-tint1 group-hover:fill-tint2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 21.8 17.3" xml:space="preserve"><path d="m21.6 9.3-7.8 7.8c-.3.3-.9.3-1.2 0s-.3-.9 0-1.2L19 9.5H.8c-.5 0-.8-.4-.8-.9 0-.4.4-.8.8-.8h18.1l-6.4-6.4c-.3-.3-.3-.9 0-1.2s.9-.3 1.2 0L21.5 8c.4.4.4.9.1 1.3" /></svg>
    </button>
  </div>

        <div class="relative z-0 splide__track">
          <ul class="splide__list ">
        {% for product in collection.products limit: 6 %}
            <li class="splide__slide">
            {% render 'product-card',card_product: product, img:product.images.first.%}
            </li>
        {% endfor %}
        </ul>
       </div>

   </div>

</div>
</section>



    {% endif %}
