  <img
    class="block w-full"
    src="{{ img| img_url: '1200'}}"
    alt="{{ img.featured_image.alt }}"
    srcset="
    {% if img.width > 640 %}{{ img.src | img_url: '640' }} 640w{% endif %}
    {% if img.width > 720 %},{{ img.src | img_url: '720'}} 720w{% endif %}
    {% if img.width > 900 %},{{ img.src | img_url: '900' }} 900w{% endif %} 
    {% if img.width > 1200 %},{{ img.src | img_url: '1200' }} 1200w{% endif %} 
    {% if img.width > 1920 %},{{img.src | img_url: '1920'  }} 1920w{% endif %} 
    "
    loading="lazy"
  />