<div>
  {% assign current_variant = product.selected_or_first_available_variant %}

  <form
    x-data='product()'
    class='mb-6'
    action='/cart/add'
    data-productid='{{ product.id }}'
    method='post'
    enctype='multipart/form-data'
    id='AddToCartForm'
  >
    <!-- <div id='recharge-container'></div> -->

    <!-- old recharge -->
    <input name='properties[shipping_interval_frequency]' type='hidden' value='1'>
    <input name='properties[shipping_interval_unit_type]' type='hidden' value='Days'>

    <!-- old recharge -->

    {% if product.available %}
      {% render 'subscription-product' %}
    {% endif %}

    {% render 'product-variants' %}

    <div class='flex flex-wrap mt-2'>
      <div class='mr-2'>{% render 'product-add' %}</div>
      <div>{% render 'product-qty', product: product.variants.first, count: 1 %}</div>
    </div>
  </form>
</div>
